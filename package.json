{
  "name": "forum-dapp-with-scaffold",
  "packageManager": "yarn@4.4.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "forum:build": "yarn workspace @forum-dapp-with-scaffold/forum build",
    "foundry:build": "yarn workspace @forum-dapp-with-scaffold/foundry compile",
    "foundry:fmt": "yarn workspace @forum-dapp-with-scaffold/foundry format",
    "forum:fmt": "yarn workspace @forum-dapp-with-scaffold/forum format",
    "start": "yarn workspace @forum-dapp-with-scaffold/forum dev",
    "format": "yarn foundry:fmt && yarn forum:fmt",
    "build": "yarn foundry:build && yarn forum:build",
    "test": "yarn workspace @forum-dapp-with-scaffold/foundry test"
  }
}
